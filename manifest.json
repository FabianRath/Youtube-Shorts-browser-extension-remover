{
  "manifest_version": 3,
  "name": "Remove Youtube Shorts",
  "version": "1.3",
  "description": "Do yourself a favor and get rid of YouTube Shorts clips, Breaking News and Community Posts",
  "author": "Fabian Rath",
  "host_permissions": [
    "https://www.youtube.com/"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "19": "icon19.png",
    "38": "icon38.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
